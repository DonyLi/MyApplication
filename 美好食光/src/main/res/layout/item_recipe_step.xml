<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_recipe_step_item_bg"
              android:gravity="top|left|center"
              android:orientation="horizontal"
              android:paddingBottom="7.5dp"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:paddingTop="6dp"
    >

    <TextView
        android:id="@+id/recipe_detail_step_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="1"
        android:textColor="#ff323232"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/recipe_detail_step_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="10dp"
            android:textColor="#ff323232"
            android:textSize="16sp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/recipe_detail_step_image_layout"
        android:layout_width="90.0dip"
        android:layout_height="90.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="2.0dip"

        >

        <ImageView
            android:id="@+id/recipe_detail_step_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#999999"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/mask_200"/>
    </FrameLayout>

</LinearLayout>